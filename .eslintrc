{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "arrow-body-style": 0,
    "arrow-parens": 0,
    "class-methods-use-this": 0,
    "comma-dangle": 0,
    "max-statements": [
      "warn",
      20,
      { "ignoreTopLevelFunctions": true }
    ],
    "semi": ["warn", "never"],
    "quotes": ["error", "single"],
    "no-unused-vars": 1
  }
}
